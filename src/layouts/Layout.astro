---
import AppFooter from "../components/AppFooter.astro";
import AppHeader from "../components/AppHeader.astro";
import Loading from "../components/Loading.astro";

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="description"
			content="Discover the transformative power of finance automation, leveraging cutting-edge AI and ML technologies to streamline financial operations. From Accounts Payable (AP) and Accounts Receivable (AR) to spend management and financial reporting, unlock efficiency, productivity, and precision in your financial processes. Embrace the revolution and elevate your focus on crucial functions like financial planning for sustainable growth."
		/>
		<meta
			name="keywords"
			content="finance automation, finance technology, financial automation, automation in finance, fintech, financial processes, financial efficiency, finance solutions, finance analyst"
		/>
		<meta
			name="author"
			content="Finance Automation - Information Technology"
		/>
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/x-icon" href="./favicon.png" />
		<link rel="icon" type="image/x-icon" href="../favicon.png" />
		<title>
			{title}
		</title>

		<link
			href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
		/>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
		<style>
			html {
				font-family: Urbanist, sans-serif;
				scroll-behavior: smooth;
			}

			body {
				margin: 0;
			}
		</style>
	</head>
	<body class="bg-black">
		<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
		<script>
			import AOS from "aos";
			import "aos/dist/aos.css"; // You can also use <link> for styles
			
			// ..
			AOS.init();
		</script>
		<Loading />
		<AppHeader />
		<slot />
		<AppFooter />
	</body>
</html>
