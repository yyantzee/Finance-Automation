---
import Container from "./Container.astro";
---

<div id="benefit">
    <Container>
        <div class="flex justify-center mb-6 mt-16 md:mb-16 md:mt-36">
            <h3
              class="text-white font-bold text-center text-2xl md:text-4xl px-4 py-4 md:px-10 md:py-6 border-2 border-blue-600 rounded-full"
            >
              Benefit
            </h3>
          </div>
        <div class="w-full h-max bg-white rounded-3xl py-10 px-4 md:px-10">
            <div class="md:flex md:justify-between">
                <div class="">
                    <div class="flex justify-center pb-10 md:pt-8 md:px-12">
                        <img src="./images/icons/fast.png" alt="" >
                    </div>
                    <h3 class="font-semibold text-center text-xl md:px-4">Faster invoice processing</h3>
                </div>

                <div class="">
                    <div class="flex justify-center pt-10 pb-10 md:pt-8 md:px-12">
                        <img src="./images/icons/costs.png" alt="" >
                    </div>
                    <h3 class="font-semibold text-center text-xl md:px-4">Lower processing costs</h3>
                </div>

                <div class="">
                    <div class="flex justify-center pt-10 pb-10 md:pt-8 md:px-12">
                        <img src="./images/icons/accuracy-2.png" alt="" >
                    </div>
                    <h3 class="font-semibold text-center text-xl md:px-4">
                        Increased accuracy</h3>
                </div>
            </div>
        </div>
    </Container>
</div>